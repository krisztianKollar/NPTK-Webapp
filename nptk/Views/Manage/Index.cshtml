@model nptk.Models.IndexViewModel
@{
    ViewBag.Title = "Profil";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Változtathatsz adataidon</h4>
    <p>Felhasználóneved és születési dátumod kivételével megváltoztathatod adataidat!</p>
    <hr />
    <dl class="dl-horizontal">
        <dt>Jelszó:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Jelszó cseréje", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>@Html.LabelFor(model => model.LastName)</dt>
        <dd>
            @Html.ActionLink(Model.LastName, "ChangeLastName")
        </dd>
        <dt>@Html.LabelFor(model => model.FirstName)</dt>
        <dd>
            @Html.ActionLink(Model.FirstName, "ChangeFirstName")
        </dd>
        <dt>@Html.LabelFor(model => model.Email)</dt>
        <dd>
            @Html.ActionLink(Model.Email, "ChangeEmail")
        </dd>
        @if (ViewBag.Tours > 0)
        {
            <dt>Jelenlegi rangod:</dt>
            <dd>
                @if (ViewBag.Tours > 0 && ViewBag.Tours < 1)
                {
                    <span>Az első rang 12 túra teljesítése után jár! Hajrá!</span>
                }
                else if (ViewBag.Tours >= 1 && ViewBag.Tours < 2)
                {
                    <span><img class="img-responsive" src="/Content/Images/bronz.png" alt="bronze rank" style="padding: 5px" width="100px"></span>
                }
                else if (ViewBag.Tours >= 2 && ViewBag.Tours < 3)
                {
                    <span><img class="img-responsive" src="/Content/Images/ezust.png" alt="silver rank" style="padding: 5px" width="100px"></span>
                }
                else
                {
                    <span><img class="img-responsive" src="/Content/Images/arany.png" alt="golden rank" style="padding: 5px" width="100px"></span>;
                }
            </dd>
        }

