@model IEnumerable<nptk.Models.ApplicationUser>

@{
    ViewBag.Title = "Túratársak";
}

<h2>@ViewBag.Title</h2>

@if (@User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Új túratárs felvétele", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Név", "Index", new { sortOrder = ViewBag.FullNameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Felhasználónév", "Index", new { sortOrder = ViewBag.UserNameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        @if (@User.IsInRole("Admin"))
        {
            <th>
                @Html.ActionLink("E-mail", "Index", new { sortOrder = ViewBag.EmailSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Születési idő", "Index", new { sortOrder = ViewBag.BirthDateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
        }
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            @if (@User.IsInRole("Admin"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    <p>

                        @Html.ActionLink("Szerkesztés", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Törlés", "Delete", new { id = item.Id }) |
                        @Html.ActionLink("Részletek", "Details", new { id = item.Id })
                    </p>
                </td>
            }
        </tr>
    }

</table>
