@model nptk.Models.News

@{
    ViewBag.Title = "Hír törlése";
}

<h2>
    @Html.DisplayNameFor(model => model.NewsTitle) törlése
</h2>
<p class="error">@ViewBag.ErrorMessage</p>
<h3>Biztosan törölni szeretnéd ezt a hírt?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NewsTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewsTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewsDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewsDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewsAbout)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewsAbout)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Törlés" class="btn btn-default" /> |
            @Html.ActionLink("Vissza a hírekhez", "Index")
        </div>
    }
</div>
