@model nptk.Models.ContactViewModel
@using nptk.Helpers


@{
    ViewBag.Title = "Kapcsolat";
}

<div class="container-fluid">
    <h2>@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>
    <div class="row">
        <div class="col-sm-5">
            <p> <a href="mailto:nagypeletura@gmail.com"><span class="glyphicon glyphicon-envelope"></span> nagypeletura@gmail.com</a></p>
            <address>
                <a href="https://www.facebook.com/groups/nagypeleturakor/">A túrakör Facebook-csoportja</a><br />
                <a href="https://www.facebook.com/petofimuvhaz.szb">A Petőfi Sándor Művelődési Ház Facebook-oldala</a><br />
                <a href="http://szirmabesenyo.hu/">Szirmabesenyő nagyközség weboldala</a>
            </address>
        </div>

        @using (Html.BeginForm("SendComment", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="col-sm-7">
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <input class="form-control" id="name" name="name" placeholder="Név" type="text" required>
                    </div>
                    <div class="col-sm-6 form-group">
                        <input class="form-control" id="email" name="email" placeholder="E-mail" type="email" required>
                    </div>
                </div>
                <textarea class="form-control" id="comment" name="comment" placeholder="Üzenet az oldalnak" rows="5"></textarea><br>
                <div class="row">
                    <div class="col-sm-12 form-group">
                        <button class="btn btn-default pull-right" type="submit">Küldés</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>