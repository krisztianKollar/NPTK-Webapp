@{
    ViewBag.Title = "Nagy Pele Túrakör";
}

<div class="container text-center" style="width:98%">
    <div class="jumbotron text-center">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="/Content/Carousel/1.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="/Content/Carousel/2.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="/Content/Carousel/3.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="/Content/Carousel/4.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="/Content/Carousel/5.jpg" style="width:100%;">
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="container" style="width:100%">
    <div class="col-md-4">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:darkkhaki; color:white">
                    <h4 class="panel-title" style="text-align:center">
                        <a data-toggle="collapse" href="#collapse1">
                            Aktuális: @ViewBag.TourTitle <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse">
                    <div class="panel-body" style="background-color:transparent">
                        <p>@ViewBag.TourAbout</p>
                        <p>@Html.ActionLink("Megnézem ", "Details", "Tours", new { id = ViewBag.ActId }, new { @class = "btn btn-default pull-right" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:darkkhaki; color:white">
                    <h4 class="panel-title" style="text-align:center">
                        <a data-toggle="collapse" href="#collapse2">
                            Előző túránk: @ViewBag.PrevTourTitle  <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body" style="background-color:transparent">
                        <p>@ViewBag.PrevTourAbout</p>
                        <p>@Html.ActionLink("Megnézem ", "Details", "Tours", new { id = ViewBag.PrevId }, new { @class = "btn btn-default pull-right" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:darkkhaki; color:white">
                    <h4 class="panel-title" style="text-align:center">
                        <a data-toggle="collapse" href="#collapse3">
                            Aktuális: @ViewBag.NewsTitle  <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <div class="panel-body" style="background-color:transparent">
                        <p>@ViewBag.ActualNews</p>
                        <p>@Html.ActionLink("Megnézem ", "Details", "News", new { id = ViewBag.ActualNewsId }, new { @class = "btn btn-default pull-right" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>