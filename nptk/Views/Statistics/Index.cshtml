@model nptk.Models.StatisticViewModel

@{

    ViewBag.Title = "Egy kis statisztika";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Néhány adat az eddigiekből</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Ami a túrakör mögött van:</dt>
        <dd>
            <p>
                Összesen <span style="font-weight:600">@ViewBag.DistanceTotal km</span>-t tettünk meg eddigi
                <span style="font-weight:600">@ViewBag.TourTotal</span> túráink során, ebből <span style="font-weight:600">@ViewBag.TourCount</span> alkalommal,
                <span style="font-weight:600">@ViewBag.UserTotalDistance km</span>-en keresztül te is velünk tartottál.
            </p>
            <p>
                Mögöttünk van <span style="font-weight:600">@ViewBag.ClimbTotal m</span> szintemelkedés is,
                amiből neked <span style="font-weight:600">@ViewBag.UserTotalClimb m</span> jutott.
            </p>
        </dd>
        <dt>Megtett távjuk alapján a legaktívabbak:</dt>
        <dd>
            <table class="table" style="width:50%">
                <tr>
                    <th>
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.FullName)
                    </th>
                    <th style="text-align: right; padding-right:10px">
                        @Html.DisplayNameFor(Model => Model.UserTotalDistance)
                    </th>
                </tr>
                @{ int rowNo = 0; }
                @foreach (var item in ViewBag.Models)
                {
                    <tr>
                        <td>
                            @(rowNo += 1).
                        </td>
                        <td>
                            @item.FullName
                        </td>
                        <td style="text-align: right; padding-right:30px">
                            @item.UserTotalDistance km
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt>A legtöbb túrán részt vevők:</dt>
        <dd>
            <table class="table" style="width:50%">
                <tr>
                    <th>
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.FullName)
                    </th>
                    <th style="text-align: right; padding-right:10px">
                        @Html.DisplayNameFor(Model => Model.UserTourCount)
                    </th>
                </tr>
                @{ int rowNum = 0; }
                @foreach (var item in ViewBag.Models)
                {
                    <tr>
                        <td>
                            @(rowNum += 1).
                        </td>
                        <td>
                            @item.FullName
                        </td>
                        <td style="text-align: right; padding-right:30px">
                            @item.UserTourCount
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>


