@model nptk.Models.GalleryViewModel

@{
    ViewBag.Title = "Album létrehozása";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Galleries", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TourId, "Túra", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("TourId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TourId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PicPaths, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.UploadedPics, new { type = "file", @multiple = "multiple" })
            @Html.ValidationMessageFor(model => model.UploadedPics, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.UploadedPics)
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Létrehozás" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Vissza az albumokhoz", "Index")
</div>
